{
    "name": "pytorch",
    "image": "nvcr.io/nvidia/pytorch:24.03-py3",

    "runArgs": [
        "-v", "${localWorkspaceFolder}/../LLM4Tracking:/workspaces/LLM4Tracking",
        "--shm-size", "2g",
        "--gpu"
    ],

    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "charliermarsh.ruff",
                "eamodio.gitlens",
                "ms-toolsai.jupyter",
                "GitHub.copilot",
                "ms-python.vscode-pylance",
                "ms-python.isort"
            ],
            "settings": {
                "files.trimTrailingWhitespace": true,
                "python.defaultInterpreterPath": "/usr/bin/python"
            }
        }
    }
    // "postStartCommand": "pip install megatron_core tensorstore==0.1.45 zarr"
}
